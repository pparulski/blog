---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 1.5rem 1rem;
		border-bottom: 1px solid rgba(0, 0, 0, 0.12);
		background: transparent;
	}
	h2 {
		margin: 0;
		font-size: 1rem;
		font-weight: 400;
		letter-spacing: 0.02em;
	}
	h2 a {
		text-decoration: none;
		color: inherit;
	}
</style>
